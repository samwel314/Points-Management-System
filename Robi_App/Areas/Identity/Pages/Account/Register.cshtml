@page
@model RegisterModel
@{
    ViewData["Title"] = "تسجيل حساب جديد";
}

<div class="container my-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary fw-bold">
        <i class="bi bi-arrow-left fw-bold"></i> العودة للرئيسية
    </a>
    <div class="row justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-10">

            <div class="card shadow border-0">
                <div class="card-body p-4 p-md-5">

                    <h4 class="text-center fw-bold mb-1">إنشاء حساب جديد</h4>
                    <p class="text-center text-muted mb-4">
                        قم بإنشاء حساب للوصول إلى النظام
                    </p>

                    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <div class="row g-3 fw-bold">

                            <!-- Full Name -->
                            <div class="col-md-6">
                                <label asp-for="Input.FullName" class="form-label">
                                    الاسم الكامل
                                </label>
                                <input asp-for="Input.FullName"
                                       class="form-control"
                                       placeholder="الاسم بالكامل" />
                                <span asp-validation-for="Input.FullName"
                                      class="text-danger small"></span>
                            </div>

                            <!-- Phone -->
                            <div class="col-md-6">
                                <label asp-for="Input.PhoneNumber" class="form-label">
                                    رقم الهاتف
                                </label>
                                <input asp-for="Input.PhoneNumber"
                                       class="form-control"
                                       placeholder="01XXXXXXXXX" />
                                <span asp-validation-for="Input.PhoneNumber"
                                      class="text-danger small"></span>
                            </div>

                            <!-- Account Type -->
                            <div class="col-md-6">
                                <label class="form-label">نوع الحساب</label>
                                <select id="roleSelect"
                                        asp-for="Input.Role"
                                        asp-items="@SD.Roles"
                                        class="form-select">
                                    <option selected disabled>اختر نوع الحساب</option>
                                </select>
                                <span asp-validation-for="Input.Role"></span>
                            </div>

                            <!-- Store (Employee only) -->
                            <div class="col-md-6" id="employeeOptions" style="display:none;">
                                <label class="form-label">الفرع التابع له الموظف</label>
                                <select asp-for="Input.StoreId"
                                        asp-items="@Model.Input.Stores"
                                        class="form-select">
                                    <option disabled selected>اختر الفرع</option>
                                </select>
                            </div>

                            <!-- Password -->
                            <div class="col-md-6">
                                <label asp-for="Input.Password" class="form-label">
                                    كلمة المرور
                                </label>
                                <input asp-for="Input.Password"
                                       class="form-control"
                                       placeholder="كلمة المرور" />
                                <span asp-validation-for="Input.Password"
                                      class="text-danger small"></span>
                            </div>

                            <!-- Confirm Password -->
                            <div class="col-md-6">
                                <label asp-for="Input.ConfirmPassword" class="form-label">
                                    تأكيد كلمة المرور
                                </label>
                                <input asp-for="Input.ConfirmPassword"
                                       class="form-control"
                                       placeholder="أعد كتابة كلمة المرور" />
                                <span asp-validation-for="Input.ConfirmPassword"
                                      class="text-danger small"></span>
                            </div>

                        </div>

                        <button type="submit"
                                class="btn btn-primary w-100 mt-4 py-2 fw-bold">
                            إنشاء الحساب
                        </button>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const roleSelect = document.getElementById('roleSelect');
        const employeeOptions = document.getElementById('employeeOptions');

        roleSelect.addEventListener('change', function () {
            if (roleSelect.value === 'Employee') {
                employeeOptions.style.display = 'block';
            } else {
                employeeOptions.style.display = 'none';
            }
        });
    </script>
}
