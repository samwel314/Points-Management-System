@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">

    <!-- Hero Section -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body text-center p-4 bg-light rounded">
            <h1 class="fw-bold text-primary mb-2">
                <i class="bi bi-paint-bucket"></i> GLC Paints
            </h1>
            <p class="text-muted fs-5">
                Quality Paints • Smart Points • Easy Management
            </p>
        </div>
    </div>

    <!-- Actions Section -->
    <div class="row g-3">

        <!-- User Card -->
        <div class="col-12 col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person fs-1 text-primary"></i>
                    <h4 class="fw-bold mt-2">Customer Area</h4>
                    <p class="text-muted">
                        Check your points, invoices and rewards
                    </p>

                    <a href="#" class="btn btn-outline-primary fw-bold w-100 mb-2">
                        <i class="bi bi-star-fill"></i> My Points
                    </a>

                    <a href="#" class="btn btn-outline-secondary fw-bold w-100">
                        <i class="bi bi-receipt"></i> My Invoices
                    </a>
                </div>
            </div>
        </div>

        <!-- Admin Card -->
        <div class="col-12 col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-shield-lock fs-1 text-danger"></i>
                    <h4 class="fw-bold mt-2">Admin Dashboard</h4>
                    <p class="text-muted">
                        Manage customers, invoices and points
                    </p>

                    <a href="#" class="btn btn-outline-danger fw-bold w-100 mb-2">
                        <i class="bi bi-people"></i> Manage Customers
                    </a>

                    <a href="#" class="btn btn-outline-dark fw-bold w-100">
                        <i class="bi bi-receipt-cutoff"></i> Manage Invoices
                    </a>
                </div>
            </div>
        </div>

    </div>

    <!-- Stats Section -->
    <div class="row mt-4 g-3">

        <div class="col-6 col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-people-fill fs-3 text-primary"></i>
                    <h5 class="fw-bold mt-2">Customers</h5>
                    <p class="text-muted mb-0">1,250+</p>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-receipt fs-3 text-success"></i>
                    <h5 class="fw-bold mt-2">Invoices</h5>
                    <p class="text-muted mb-0">8,400+</p>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-star-fill fs-3 text-warning"></i>
                    <h5 class="fw-bold mt-2">Points</h5>
                    <p class="text-muted mb-0">120K+</p>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="bi bi-shop fs-3 text-danger"></i>
                    <h5 class="fw-bold mt-2">Stores</h5>
                    <p class="text-muted mb-0">GLC Main Branch</p>
                </div>
            </div>
        </div>

    </div>

</div>
