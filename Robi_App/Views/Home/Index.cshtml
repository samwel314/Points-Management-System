<div class="container mt-4">
    <div class="card shadow-sm border-1 rounded-3">

        <!-- Header -->
        <div class="card-header bg-primary bg-gradient py-3 text-center">
            <h2 class="fs-2 fw-bold text-white">
                <i class="bi bi-person-plus-fill me-2"></i> Add New Customer
            </h2>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            <form method="post" asp-action="Add" class="row g-3">

                <!-- Full Name -->
                <div class="form-floating col-12">
                    <input type="text" class="form-control fw-bold border-1 shadow-sm" placeholder="Full Name" />
                    <label type="text" class="ms-2 fw-bold fs-5">Full Name</label>
@*                     <span asp-validation-for="FullName" class="text-danger fw-bold"></span>
 *@                </div>

                <!-- Mobile Number -->
                <div class="form-floating col-12">
                    <input type="text" class="form-control fw-bold border-1 shadow-sm" placeholder="Mobile Number" />
                    <label type="text" class="ms-2 fw-bold fs-5">Mobile Number</label>
@*                     <span asp-validation-for="Mobile" class="text-danger fw-bold"></span>
 *@                </div>

                <!-- Temporary Password -->
                <div class="form-floating col-12">
                    <input type="text" class="form-control fw-bold border-1 shadow-sm" placeholder="Temporary Password" value="x" />
                    <label type="text" class="ms-2 fw-bold fs-5">Temporary Password</label>
@*                     <span asp-validation-for="TemporaryPassword" class="text-danger fw-bold"></span>
 *@                </div>

                <!-- Buttons -->
                <div class="col-12 d-flex justify-content-between flex-wrap mt-3 gap-2">
                    <button type="submit" class="btn btn-primary fw-bold flex-grow-1">
                        <i class="bi bi-person-plus-fill me-1"></i> Add Customer
                    </button>
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-dark fw-bold flex-grow-1 text-center">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back To Customers
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

