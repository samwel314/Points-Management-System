@* صفحة المستخدم 
 *@

<!-- Modal Add Invoice -->
<div class="modal fade" id="addInvoiceModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-receipt"></i> Add New Invoice</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label"><i class="bi bi-upc-scan"></i> Invoice Code</label>
                        <input type="text" class="form-control" placeholder="Enter invoice code">
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><i class="bi bi-shop"></i> Store</label>
                        <input type="text" class="form-control" placeholder="Enter store name">
                    </div>
                </form>
            </div>

            <div class="modal-footer d-grid">
                <button class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Submit Invoice
                </button>
            </div>

        </div>
    </div>
</div>

 

