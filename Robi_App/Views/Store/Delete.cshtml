@model Store
<div class="card shadow border-1 mt-4">
    <div class="card-header bg-light bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-bg-light py-2 fs-2 fw-bold"> <i class="bi bi-file-x"></i> Delete @Model.Title Store !</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Delete" class="row">
            <input asp-for="Id" hidden disabled />
            <div class="border p-3">
                <div class="form-floating  py-2 col-12">
                    <input disabled asp-for="Title" class="form-control fw-bold border-1 shadow " />
                    <label asp-for="Title" class="ms-2 fs-4 fw-bold "> </label>
                </div>
                <div class="form-floating  py-2 col-12 ">
                    <input disabled asp-for="Location" class="form-control fw-bold border-1 shadow " />
                    <label asp-for="Location" class="ms-2 fs-4 fw-bold"> </label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-danger border fw-bold  form-control">Delete Store </button>

                    </div>
                    <div class="col-6 col-md-3 ">
                        <a asp-controller="Store" asp-action="Index" class="btn btn-outline-dark border fw-bold form-control">Back To Stores</a>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>

