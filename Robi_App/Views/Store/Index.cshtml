@model List<Store>
<div class="card shadow border-2 mt-4">

    <div class="card-header  bg-light ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-bg-light py-2"><i class="bi bi-shop-window"></i> Manage Your Stores</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 ">

        <div class="row  pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Store" asp-action="Add" class="btn btn-primary border fw-bold">
                    <i class="bi bi-file-plus-fill"></i>   Add New Store
                </a>
            </div>
        </div>

        <table class="table border border-5 border-light-subtle table-active table-hover ">
            <thead class="text-center">
                <tr class="table-primary  fs-3">
                    <th>Store Name </th>
                    <th>Location </th>
                    <th> </th>
                </tr>
            </thead>
            <tbody class="text-center">

                @foreach (var store in Model)
                {
                    <tr>
                        <td class="fw-bold">@store.Title </td>
                        <td class="fw-bold">@store.Location  </td>
                        <td >
                            <div class="w-75 btn-group "  role="group">
                                <a class="btn btn-warning mx-2 fw-bold" asp-action="Update" asp-route-Id="@store.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-danger mx-2 fw-bold" asp-action="Delete" asp-route-Id="@store.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>

                            </div>
                        </td>

                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>

