@model List<Store>

<div class="container mt-4">

    <!-- Header + Add Store Button -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2 class="fs-3 fw-bold text-primary">
            <i class="bi bi-shop-window me-2"></i> Manage Your Stores
        </h2>
        <a asp-controller="Store" asp-action="Add" class="btn btn-primary fw-bold mb-2">
            <i class="bi bi-file-plus-fill me-1"></i> Add New Store
        </a>
    </div>

    <div class="row g-3">

        @foreach (var store in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm h-100 border-1 rounded-3">
                    <div class="card-body">

                        <!-- Store Info -->
                        <h5 class="card-title fw-bold">
                            <i class="bi bi-shop me-1"></i> @store.Title
                        </h5>
                        <p class="card-text text-muted mb-3">
                            <i class="bi bi-geo-alt me-1"></i> @store.Location
                        </p>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between flex-wrap gap-2">
                            <a asp-action="Update" asp-route-Id="@store.Id" class="btn btn-warning fw-bold flex-grow-1">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-Id="@store.Id" class="btn btn-danger fw-bold flex-grow-1">
                                <i class="bi bi-trash me-1"></i> Delete
                            </a>
                            <a asp-controller="Invoice" asp-action="ByStore" asp-route-storeId="@store.Id" class="btn btn-info fw-bold flex-grow-1 text-white">
                                <i class="bi bi-receipt me-1"></i> View Invoices
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }

    </div>
</div>
