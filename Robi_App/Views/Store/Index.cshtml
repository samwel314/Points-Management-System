@model List<Store>
<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h2 class="fw-bold mb-0">
            <i class="bi bi-shop-window text-primary me-2"></i>
            Stores
        </h2>

        <a asp-controller="Store" asp-action="Add"
           class="btn btn-primary btn-sm px-3">
            <i class="bi bi-plus-circle me-1"></i>
            New Store
        </a>
    </div>

    <div class="row g-4">

        @foreach (var store in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 border rounded-3 shadow bg-light">

                    <div class="card-body">
                        <h5 class="fw-bold mb-1">
                            <i class="bi bi-shop text-primary me-1"></i>
                            @store.Title
                        </h5>

                        <p class="text-muted small mb-3">
                            <i class="bi bi-geo-alt me-1"></i>
                            @store.Location
                        </p>
                    </div>

                    <div class="card-footer bg-white border-0 pt-0">
                        <div class="d-flex gap-2">
                            <a asp-action="Update" asp-route-Id="@store.Id"
                               class="btn btn-outline-primary btn-sm flex-fill"
                               title="Edit">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a asp-action="Delete" asp-route-Id="@store.Id"
                               class="btn btn-outline-danger btn-sm flex-fill"
                               title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>

                            <a asp-controller="Invoice" asp-action="ByStore"
                               asp-route-storeId="@store.Id"
                               class="btn btn-outline-secondary btn-sm flex-fill"
                               title="View Invoices">
                                <i class="bi bi-receipt"></i>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        }

    </div>
</div>
