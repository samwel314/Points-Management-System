@model List<CustomerProfileVM>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
        <h6 class="text-primary fw-bold mb-2">
            <i class="bi bi-people"></i> Customers
        </h6>
        <a asp-area="Identity" asp-page="/Account/Register"
           class="btn btn-primary btn-sm fw-bold mb-2">
            <i class="bi bi-person-plus-fill me-1"></i> Add New Customer
        </a>
    </div>

    <div class="row g-2">
        @foreach (var customer in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm mb-2">
                    <div class="card-body py-2 px-3 d-flex justify-content-between align-items-center flex-wrap">

                        <div>
                            <h6 class="mb-1 fw-semibold small">
                                <i class="bi bi-person-circle"></i> @customer.CustomerName
                            </h6>

                            <div class="text-muted d-flex align-items-center gap-1 small mb-1">
                                <i class="bi bi-telephone"></i>
                                <span class="copy-text">@customer.PhoneNumber</span>
                                <button class="btn btn-outline-secondary btn-sm py-0 px-1 copy-btn"
                                        data-bs-toggle="tooltip" data-bs-placement="top" title="Copied!"
                                        onclick="copyValue(this)">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>

                            <div class="text-muted d-flex align-items-center gap-1 small">
                                <i class="bi bi-key-fill"></i>
                                <span class="copy-text">@customer.PassWord</span>
                                <button class="btn btn-outline-secondary btn-sm py-0 px-1 copy-btn"
                                        data-bs-toggle="tooltip" data-bs-placement="top" title="Copied!"
                                        onclick="copyValue(this)">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>
                        </div>

                        <div class="text-end mt-2 mt-md-0">
                            <a asp-controller="Customer" asp-action="Show" asp-route-Id="@customer.CustomerId" class="btn btn-sm btn-outline-primary px-2 py-1">
                                <i class="bi bi-eye"></i>
                            </a> 
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

@section Scripts {
    <script>
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        tooltipTriggerList.map(function (el) {
            return new bootstrap.Tooltip(el)
        });

        function copyValue(button) {
            const text = button.previousElementSibling.innerText;
            navigator.clipboard.writeText(text);

            const tooltip = bootstrap.Tooltip.getInstance(button);
            tooltip.show();
            setTimeout(() => tooltip.hide(), 1000); 
        }
    </script>
}
