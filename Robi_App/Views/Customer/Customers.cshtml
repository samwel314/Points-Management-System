@model List<CustomerProfileVM>

<div class="container mt-4">
    <div class="mb-4 text-start">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary fw-bold">
            <i class="bi bi-arrow-left fw-bold"></i> العودة للرئيسية
        </a>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2 class="text-primary fw-bold mb-2 text-center flex-grow-1">
            <i class="bi bi-people-fill"></i> العملاء
        </h2>
        <a asp-area="Identity" asp-page="/Account/Register"
           class="btn btn-primary btn-sm fw-bold mb-2">
            <i class="bi bi-person-plus-fill me-1"></i> إضافة عميل جديد
        </a>
    </div>

    <div class="row g-4">
        @foreach (var customer in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm h-100 customer-card" dir="rtl">
                    <div class="card-body d-flex flex-column justify-content-between">

                        <div class="d-flex mb-4 align-items-center">

                            <div class="me-3 ms-auto d-flex align-items-center justify-content-center">
                                <div class="customer-icon text-white rounded-circle d-flex align-items-center justify-content-center">
                                    @customer.CustomerName[0]
                                </div>
                            </div>

                            <div class="flex-grow-1 text-end">
                                <h5 class="mb-3 fw-bold text-primary">@customer.CustomerName</h5>

                                <div class="d-flex align-items-center gap-2 mb-2 small justify-content-end">
                                    <span>@customer.PhoneNumber</span>
                                    <i class="bi bi-telephone text-success fs-5"></i>
                                    <button class="btn btn-outline-success btn-sm py-0 px-1 copy-btn"
                                            onclick="copyValue(this)">
                                        <i class="bi bi-clipboard"></i>
                                    </button>
                                </div>

                                <div class="d-flex align-items-center gap-2 mb-2 small justify-content-end">
                                    <span>@customer.PassWord</span>
                                    <i class="bi bi-key-fill text-warning fs-5"></i>
                                    <button class="btn btn-outline-warning btn-sm py-0 px-1 copy-btn"
                                            onclick="copyValue(this)">
                                        <i class="bi bi-clipboard"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="mt-auto text-start">
                            <a asp-controller="Customer" asp-action="Show" asp-route-Id="@customer.CustomerId"
                               class="btn btn-outline-primary fw-bold px-3 py-1">
                                <i class="bi bi-eye"></i> عرض التفاصيل
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>



@section Scripts {
    <script>
        function copyValue(button) {
            const text = button.previousElementSibling.innerText;
            navigator.clipboard.writeText(text);

            const originalHTML = button.innerHTML;
            button.innerHTML = '<i class="bi bi-check2-circle"></i> تم النسخ';
            button.disabled = true;

            setTimeout(() => {
                button.innerHTML = originalHTML;
                button.disabled = false;
            }, 1500);
        }
    </script>
}
