
<div class="container mt-4">

    <!-- Header + Add Customer Button -->
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
        <h5 class="text-primary fw-bold mb-2">
            <i class="bi bi-people"></i> Customers
        </h5>
        <a asp-controller="Customer" asp-action="Add" class="btn btn-primary fw-bold mb-2">
            <i class="bi bi-person-plus-fill me-1"></i> Add New Customer
        </a>
    </div>

    <!-- Customer Card Template -->
    <div class="card shadow-sm mb-3">
        <div class="card-body d-flex justify-content-between align-items-center flex-wrap">

            <!-- Customer Info -->
            <div>
                <h6 class="mb-1 fw-bold">
                    <i class="bi bi-person-circle"></i> Ahmed Ali
                </h6>
                <p class="mb-1 text-muted d-flex align-items-center gap-2">
                    <i class="bi bi-telephone"></i>
                    <span id="phone1">01012345678</span>
                    <button class="btn btn-outline-secondary btn-sm" onclick="copyToClipboard('phone1')">
                        <i class="bi bi-clipboard"></i> Copy
                    </button>
                </p>
                <p class="mb-0 text-muted d-flex align-items-center gap-2">
                    <i class="bi bi-key-fill"></i>
                    <span id="pass1">01012345678</span>
                    <button class="btn btn-outline-secondary btn-sm" onclick="copyToClipboard('pass1')">
                        <i class="bi bi-clipboard"></i> Copy
                    </button>
                </p>
            </div>

            <!-- Points + View Button -->
            <div class="text-end mt-2 mt-md-0">
                <span class="badge bg-success mb-2 d-block">
                    ⭐ 320 Points
                </span>
                <a href="#" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i> View
                </a>
            </div>
        </div>
    </div>

    <!-- Another Customer Example -->
    <div class="card shadow-sm mb-3">
        <div class="card-body d-flex justify-content-between align-items-center flex-wrap">

            <div>
                <h6 class="mb-1 fw-bold">
                    <i class="bi bi-person-circle"></i> Mohamed Samy
                </h6>
                <p class="mb-1 text-muted d-flex align-items-center gap-2">
                    <i class="bi bi-telephone"></i>
                    <span id="phone2">01198765432</span>
                    <button class="btn btn-outline-secondary btn-sm" onclick="copyToClipboard('phone2')">
                        <i class="bi bi-clipboard"></i> Copy
                    </button>
                </p>
                <p class="mb-0 text-muted d-flex align-items-center gap-2">
                    <i class="bi bi-key-fill"></i>
                    <span id="pass2">01198765432</span>
                    <button class="btn btn-outline-secondary btn-sm" onclick="copyToClipboard('pass2')">
                        <i class="bi bi-clipboard"></i> Copy
                    </button>
                </p>
            </div>

            <div class="text-end mt-2 mt-md-0">
                <span class="badge bg-warning text-dark mb-2 d-block">
                    ⭐ 95 Points
                </span>
                <a href="#" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i> View
                </a>
            </div>

        </div>
    </div>

</div>
