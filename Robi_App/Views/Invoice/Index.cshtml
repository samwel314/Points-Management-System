@model List<ShowInvoiceVM>
@{
    int idCount = 0;
}

<div class="container mt-4">

    <!-- زر العودة على الشمال -->
    <div class="mb-4 text-start">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary fw-bold px-4 py-2 shadow-sm">
            <i class="bi bi-arrow-left me-2"></i> العودة للرئيسية
        </a>
    </div>

    <!-- عنوان الصفحة -->
    <h3 class="text-center mb-4 fw-bold text-primary display-6">
        <i class="bi bi-file-earmark-text"></i>  @Html.Raw(TempData["txt"]) 
    </h3>

    <div class="row g-4 pt-3">
        <!-- Cards الفواتير -->
        @foreach (var info in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm h-100 border-0 rounded-3 hover-shadow">
                    <div class="card-body d-flex flex-column justify-content-between">

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="fw-bold fs-5">
                                <i class="bi bi-receipt me-2"></i> @info.code
                            </span>
                            <span class="badge bg-success fs-6 py-2 px-3">@info.Points نقطة</span>
                        </div>

                        <div class="mb-3">
                            <p class="mb-2 text-muted fs-6"><i class="bi bi-shop me-2"></i> المحل: @info.storeName</p>
                            <p class="mb-2 text-muted fs-6"><i class="bi bi-person-circle me-2"></i> العميل: @info.UserName</p>
                            <p class="mb-2 text-muted fs-6"><i class="bi bi-telephone me-2"></i> الهاتف: @info.Phone</p>
                            <p class="mb-0 text-muted fs-6"><i class="bi bi-calendar-event me-2"></i> التاريخ: @info.Date</p>
                        </div>

                        <div class="d-grid mt-3">
                            <button class="btn btn-outline-primary fw-bold" data-bs-toggle="modal"
                                    data-bs-target="#@(idCount)editPointsModal">
                                <i class="bi bi-pencil-square me-2"></i> تعديل النقاط
                            </button>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal fade" id="@(idCount)editPointsModal" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">

                        <div class="modal-header text-center">
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>

                            <h5 class="modal-title fw-bold ">
                                <i class="bi bi-pencil-square  me-2"></i> تعديل نقاط الفاتورة
                            </h5>
                        </div>

                        <div class="modal-body">
                            <form method="post" asp-action="UpdatePoints" id="@info.Id">
                                <input name="Id" value="@info.Id" hidden />

                                <div class="mb-3">
                                    <label class="form-label fw-bold"><i class="bi bi-upc-scan me-2"></i> رمز الفاتورة</label>
                                    <input asp-for="@info.code" class="form-control" readonly>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold"><i class="bi bi-shop me-2"></i> المحل</label>
                                    <input asp-for="@info.storeName" class="form-control" readonly>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold"><i class="bi bi-person-circle me-2"></i> العميل</label>
                                    <input asp-for="@info.UserName" class="form-control" readonly>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold"><i class="bi bi-stars me-2"></i> النقاط</label>
                                    <input type="number" name="Points" value="@info.Points" class="form-control fw-bold" min="0">
                                </div>

                                <div class="modal-footer d-grid">
                                    <button type="submit" class="btn btn-success fw-bold">
                                        <i class="bi bi-check-circle me-2"></i> حفظ النقاط
                                    </button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
            idCount++;
        }
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
