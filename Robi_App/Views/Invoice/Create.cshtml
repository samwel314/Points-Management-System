@{
    ViewData["Title"] = User is null ? "Create" : User.FindFirst(ClaimTypes.Name)!.Value;
}
@model CreateUpdateInvoiceVM
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center fw-bold">
                    <i class="bi bi-receipt-cutoff me-1"></i>
                  Enter Invoice Data
                </div>

                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <!-- Invoice Code -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-upc-scan me-1"></i>
                                Invoice Code
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-hash"></i>
                                </span>
                                <input asp-for="Code"
                                       class="form-control"
                                       placeholder="Enter invoice code">
                            </div>
                            <span class="text-danger fw-bold" asp-validation-for="Code"></span>

                        </div>

                        <!-- Store -->
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-shop me-1"></i>
                               From Store 
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-building"></i>
                                </span>
                                <select asp-for="StoreId" asp-items="@Model.Stores"
                                       class="form-control"
                                    ></select>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i>
                                Add
                            </button>
                            <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Back 
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
